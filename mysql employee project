mysql> select employees.f_name,employees.l_name,departments.department_name FROM employees JOIN departments ON employees.department_id=departments.department_id;
+------------+--------+-----------------+
| f_name     | l_name | department_name |
+------------+--------+-----------------+
| javed      | sk     | sales           |
| nikihi     | p      | sales           |
| srinu      | p      | sales           |
| gopalreddy | venna  | marketing       |
| ajay       | p      | marketing       |
| teja       | s      | marketing       |
| teja2      | s      | advertaising    |
| teja1      | s      | marts           |
+------------+--------+-----------------+
8 rows in set (0.00 sec)

mysql> select departments.department_name,COUNT(employees.employee_id)AS total_employees FROM departments LEFT JOIN employees ON departments.department_id=employees.department_id GROUP BY departments.department_name;
+-----------------+-----------------+
| department_name | total_employees |
+-----------------+-----------------+
| sales           |               3 |
| marketing       |               3 |
| advertaising    |               1 |
| marts           |               1 |
+-----------------+-----------------+
4 rows in set (0.00 sec)

